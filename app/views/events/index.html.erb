<h1>Listing events</h1>

<table>
  <tr>
    <th>Event Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Time</th>
    <th>Date</th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td><%= event.location %></td>
      <td><%= event.time %></td>
      <td><%= event.date %></td>
      <td><%= link_to 'Show', event_path(event) %></td>
    </tr>
  <% end %>
</table>
