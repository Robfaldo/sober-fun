<%= render "navigation" %>

<div class = 'col-md-8 offset-2'>
  <h1 class = "text-center">New Event</h1>
  <%= simple_form_for :event, url: events_path do |f| %>
    <%= f.input :title %>
    <%= f.input :location %>
    <%= f.input :time, as: :time %>
    <%= f.input :date, as: :date %>
    <%= f.input :description %>
    <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true} %>
    <%= f.submit "Submit", class: 'btn btn-lg btn-primary float-right' %>
  <% end %>
</div>
